{
    "openapi": "3.0.0",
    "info": {
        "title": "Krebit Sign API documentation",
        "description": "This is the API documentation for the Krebit Sign API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://{organization}.krebit.se",
            "description": "Krebit Sign API server",
            "variables": {
                "organization": {
                    "default": "{organization}",
                    "description": "The organization to use"
                }
            }
        }
    ],
    "paths": {
        "/api/1.0/signings": {
            "get": {
                "tags": [
                    "Signings"
                ],
                "summary": "Gets a list of signings",
                "description": "Display a listing of the resource.",
                "operationId": "getSignings",
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "The number of signings to return",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32",
                            "default": 10,
                            "maximum": 100,
                            "minimum": 1
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "The page number to return",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "format": "int32",
                            "default": 1,
                            "minimum": 1
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/SigningCollectionResource"
                                            }
                                        },
                                        "links": {
                                            "type": "object"
                                        },
                                        "meta": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "A valid authentication token was not provided with the request"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Signings"
                ],
                "summary": "Create a new signing draft",
                "description": "Create a new signing draft.",
                "operationId": "createSigning",
                "requestBody": {
                    "description": "Data required to create a signing draft",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SigningStoreRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Signing draft created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SigningResource"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "A valid authentication token was not provided with the request"
                    },
                    "400": {
                        "description": "Invalid input data provided"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/1.0/signings/{uuid}": {
            "get": {
                "tags": [
                    "Signings"
                ],
                "summary": "Get a signing",
                "description": "Display the specified signing.",
                "operationId": "getSigning",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "description": "The UUID of the signing",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid",
                            "example": "d3b3b3b3-3b3b-3b3b-3b3b-3b3b3b3b3b3b"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SigningResource"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "A valid authentication token was not provided with the request"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "SigningCollectionResource": {
                "properties": {
                    "uuid": {
                        "type": "string",
                        "example": "d3b3b3b3-3b3b-3b3b-3b3b-3b3b3b3b3b3b"
                    },
                    "name": {
                        "description": "The name of the signing",
                        "type": "string",
                        "example": "The contract"
                    },
                    "is_draft": {
                        "description": "Whether or not this signing is a draft",
                        "type": "boolean",
                        "example": false
                    },
                    "language": {
                        "type": "string",
                        "enum": [
                            "en",
                            "sv"
                        ],
                        "example": "en"
                    },
                    "message": {
                        "description": "Message sent to the end user together with the signing link",
                        "type": "string",
                        "example": "Please sign this document"
                    },
                    "signing_order": {
                        "type": "string",
                        "enum": [
                            "parallel",
                            "sequential"
                        ],
                        "example": "parallel"
                    },
                    "is_completed": {
                        "type": "boolean",
                        "example": false
                    },
                    "cancelled_at": {
                        "description": "The date when this signing was cancelled",
                        "type": "string",
                        "example": "2021-09-01T12:00:00Z"
                    },
                    "created_at": {
                        "description": "The date when this signing was created",
                        "type": "string",
                        "example": "2021-09-01T12:00:00Z"
                    },
                    "updated_at": {
                        "description": "The date when this signing was last updated",
                        "type": "string",
                        "example": "2021-09-01T12:00:00Z"
                    }
                },
                "type": "object"
            },
            "SigningResource": {
                "properties": {
                    "uuid": {
                        "type": "string",
                        "example": "d3b3b3b3-3b3b-3b3b-3b3b-3b3b3b3b3b3b"
                    },
                    "name": {
                        "description": "The name of the signing",
                        "type": "string",
                        "example": "The contract"
                    },
                    "is_draft": {
                        "description": "Whether or not this signing is a draft",
                        "type": "boolean",
                        "example": false
                    },
                    "language": {
                        "type": "string",
                        "enum": [
                            "en",
                            "sv"
                        ],
                        "example": "en"
                    },
                    "message": {
                        "description": "Message sent to the end user together with the signing link",
                        "type": "string",
                        "example": "Please sign this document"
                    },
                    "signing_order": {
                        "type": "string",
                        "enum": [
                            "parallel",
                            "sequential"
                        ],
                        "example": "parallel"
                    },
                    "is_completed": {
                        "type": "boolean",
                        "example": false
                    },
                    "cancelled_at": {
                        "description": "The date when this signing was cancelled",
                        "type": "string",
                        "example": "2021-09-01T12:00:00Z"
                    },
                    "created_at": {
                        "description": "The date when this signing was created",
                        "type": "string",
                        "example": "2021-09-01T12:00:00Z"
                    },
                    "updated_at": {
                        "description": "The date when this signing was last updated",
                        "type": "string",
                        "example": "2021-09-01T12:00:00Z"
                    }
                },
                "type": "object"
            },
            "SigningStoreRequest": {
                "required": [
                    "name",
                    "language",
                    "signing_order"
                ],
                "properties": {
                    "name": {
                        "description": "The name of the signing",
                        "type": "string",
                        "example": "The contract"
                    },
                    "language": {
                        "type": "string",
                        "enum": [
                            "en",
                            "sv"
                        ],
                        "example": "en"
                    },
                    "message": {
                        "description": "Message sent to the end user together with the signing link",
                        "type": "string",
                        "example": "Please sign this document"
                    },
                    "signing_order": {
                        "type": "string",
                        "enum": [
                            "parallel",
                            "sequential"
                        ],
                        "example": "parallel"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Signings",
            "description": "Operations related to signings"
        }
    ]
}